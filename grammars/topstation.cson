'scopeName': 'source.topstation'
'name': 'topstation'
'fileTypes': ['src', 'inc']

patterns: [
	{
		include: '#commentaires'
	}
	{
		include: '#nombres'
	}
	{
		include: '#motscles'
	}
	{
		include: '#fonctions'
	}
]

repository:
	commentaires:
		patterns: [
			{
				begin: '/\\*'
				beginCaptures:
					'0':
						name: 'punctuation.definition.comment.begin.topstation'
				end: '\\*/'
				endCaptures:
					'0':
						name: 'punctuation.definition.comment.end.topstation'
				name: 'comment.block.topstation'
			}
		]

	nombres:
		patterns: [
			{
				match: '\\b(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((E|e)(\\+|-)?[0-9]+)?\\b'
				name: 'constant.numeric.topstation'
			}
		]

	motscles:
		patterns: [
			{
				match: '(\\#include)\\s\\"(.*)\\"'
				'captures':
					'1':
						'name': 'keyword.control.topstation'
					'2':
						'name': 'entity.name.function.topstation'
				name: 'meta.function.topstation'
			}

			{
				match: '\\b(?i)(abs|acos|add|angx|aplan|arg_cons|arn|asc|asin|atan|atan2|base|bit|bit_prec|bit_suiv|c127|car_n|chr|clq|clq_act|clq_co|clq_def|clq_gel|clq_lt|clq_lw|clq_ps|clq_tra|clq_ver|clr|clr_b|clr_r|clr_v|cos|date|defcar|defcmp|defdom|defdro|defind|deflin|defmdl|defmdlr|defpar|defpnt|defprc|defsel|defsym|defzon|dipd|dist|dniv|dplg|dplh|dplm|dpls|dplt|ech|errm|et|ficbrut|foc_suiv|focus|gdro|gist|gplan|hplan|inf|kech|len|lin_id|log|log10|lontex|lplan|ltrn|lwc|lwcn|malind|max|ma|mess|min|ml|mm|mod|modif|mprf|ndch|ndcv|newbase|nlfic|nmbr|nmr|nombase|nombd|nompres|ohor|ordre|page|parbloc|pent|pi|pl_dd|pl_df|pl_zb|pl_zh|plate_forme|pos|pos_ral_j|pos_ral_r|posfic|prec|prem|pres|prs_def|prs_form|prs_fpix|prs_haut|prs_larg|prs_marb|prs_mard|prs_marg|prs_marh|prs_odes|prs_opap|prs_trac|pt_dd|pt_dg|pt_zb|pt_zh|reste|rnd|rom8|rprf|selon|shor|sign|sin|si|stx_def|stx_fact|stx_font|stx_gras|stx_haut|stx_ital|stx_obli|stx_refl|stx_renv|stx_type|stx_vert|suiv|sup|symbloc|tan|tops|tq|trim|tx|udiax|udiay|udro|uhor|upc|upcn|uplan|util|valnum|vdro|version|vplan|wdro|xmil|xplan|xtr|ymil|yplan|zmil|zsurf)\\b'
				name: 'keyword.control.topstation'
			}

			{
				match: '\\b(?i)(if|else|whil|runs|runl|var|runa|runm|runb|rund|runc|runz|runr|runp|rune|marq|proc)\\b'
				name: 'keyword.control.topstation'
